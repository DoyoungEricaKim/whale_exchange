{
    "manifest_version": 2,
    "name": "환전 알람",
    "version": "1.0.0",

    "description": "환율 예약 알람 서비스",
    "icons": {
      "16": "image/icon.png"
    },
    "default_locale": "ko",

    "sidebar_action": {
      "default_icon": {
         "16": "image/icon.png"
      },
      "default_page": "index.html",
      "default_title": "EXCHANGE ALARM",
      "use_navigation_bar": false,
      "mobile_user_agent": true
    },

    "background": {
        "scripts": [...],
    },
    "content_scripts": [ {
      "css": [ "script/content.css" ],
      }],
    "permissions": ["tabs", "notifications" ],
   }
}
